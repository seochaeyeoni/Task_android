<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#E8E8E8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:background="@drawable/moviedetail_background">
                <ImageView
                    android:id="@+id/moviedetail_profile"
                    android:layout_width="140dp"
                    android:layout_height="200dp"
                    android:src="@drawable/image11"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/moviedetail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="군도"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <ImageView
                        android:id="@+id/moviedetail_watchGradeNm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_15"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_title"
                        app:layout_constraintTop_toTopOf="@id/moviedetail_title"
                        app:layout_constraintBottom_toBottomOf="@id/moviedetail_title"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/moviedetail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014.07.23 개봉"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/moviedetail_title"
                        app:layout_constraintStart_toStartOf="@id/moviedetail_title"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/moviedetail_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="액션 / "
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/moviedetail_date"
                        app:layout_constraintStart_toStartOf="@id/moviedetail_title"/>
                    <TextView
                        android:id="@+id/moviedetail_showTm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="137분"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toBottomOf="@id/moviedetail_date"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_genre"/>
                    <ImageView
                        android:id="@+id/moviedetail_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_thumb_up"
                        app:layout_constraintTop_toBottomOf="@id/moviedetail_genre"
                        app:layout_constraintStart_toStartOf="@id/moviedetail_title"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/moviedetail_like_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toTopOf="@id/moviedetail_like"
                        app:layout_constraintBottom_toBottomOf="@id/moviedetail_like"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_like"
                        android:layout_marginLeft="5dp"/>
                    <ImageView
                        android:id="@+id/moviedetail_unlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_thumb_down"
                        app:layout_constraintTop_toBottomOf="@id/moviedetail_genre"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_like_num"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        app:layout_constraintTop_toTopOf="@id/moviedetail_unlike"
                        app:layout_constraintBottom_toBottomOf="@id/moviedetail_unlike"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_unlike"
                        android:layout_marginLeft="5dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="#00000000">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="2dp"
                    android:background="#00000000"
                    android:layout_margin="2dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/moviedetail_bookingrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예매율"
                            android:textSize="18sp"
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/moviedetail_bookingrate_num"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>
                        <TextView
                            android:id="@+id/moviedetail_bookingrate_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5위 1.8%"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toBottomOf="@id/moviedetail_bookingrate"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="2dp"
                    android:background="#00000000"
                    android:layout_margin="2dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/moviedetail_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평점"
                            android:textSize="18sp"
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/moviedetail_score_num"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:rating="4"
                            android:stepSize="0.5"
                            android:max="5"
                            android:isIndicator="true"
                            app:layout_constraintTop_toBottomOf="@id/moviedetail_score"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/moviedetail_score_num"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                            android:id="@+id/moviedetail_score_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.2"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toBottomOf="@id/moviedetail_score"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ratingBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="2dp"
                    android:background="#00000000"
                    android:layout_margin="2dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/moviedetail_spectators"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="누적관객수"
                            android:textSize="18sp"
                            android:textStyle=""
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/moviedetail_spectators_num"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>
                        <TextView
                            android:id="@+id/moviedetail_spectators_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="839,399명"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#7D7D7D"
                            app:layout_constraintTop_toBottomOf="@id/moviedetail_spectators"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_weight="1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="줄거리"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="군도, 백성을 구하라\n양반과 탐관오리들의 착취가 극에 달했던 조선 철종 13년. 힘 없는 백성의 편이 되어 세상을.."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#7D7D7D"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감독/출연"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_margin="10dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/moviedetail_director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="감독"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/moviedetail_director_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="윤종빈"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#7D7D7D"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/moviedetail_director"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/moviedetail_actor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출연"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/moviedetail_actor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="하정우(도치), 강동원(조윤)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#7D7D7D"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintStart_toEndOf="@id/moviedetail_actor"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="25dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="한줄평"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginRight="20dp">
                            <ImageView
                                android:id="@+id/ic_review"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_review_selected"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>
                            <TextView
                                android:id="@+id/moviedetail_createreview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="작성하기"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#F25422"
                                android:layout_marginLeft="5dp"
                                app:layout_constraintTop_toTopOf="@id/ic_review"
                                app:layout_constraintStart_toEndOf="@id/ic_review"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                    </androidx.recyclerview.widget.RecyclerView>
                    <Button
                        android:layout_gravity="center"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="모두 보기"
                        android:textStyle="bold"
                        android:textColor="#9C27B0"
                        android:background="@drawable/btn_purple"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <ImageButton
                        android:id="@+id/moviedetail_facebook"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_facebook"
                        android:background="#00000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/moviedetail_kakao"/>
                    <ImageButton
                        android:id="@+id/moviedetail_kakao"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_kakao"
                        android:background="#00000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_facebook"
                        app:layout_constraintEnd_toStartOf="@id/moviedetail_reserve"/>
                    <Button
                        android:id="@+id/moviedetail_reserve"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="예매하기"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#FF5722"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/moviedetail_kakao"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>