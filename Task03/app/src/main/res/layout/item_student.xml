<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/profile_student"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.55"
            android:scaleType="centerInside"
            android:background="#F6E0F5"
            android:src="@drawable/girlsimple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/name_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="죠즈94646"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile_student"
            app:layout_constraintLeft_toLeftOf="@id/profile_student"
            app:layout_constraintRight_toRightOf="@id/profile_student"/>
        <ImageView
            android:id="@+id/grade"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_school_24"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/name_student"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/grade_student"/>
        <TextView
            android:id="@+id/grade_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="죠즈94646"
            android:textColor="#2F2F2F"
            android:textSize="13sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/name_student"
            app:layout_constraintStart_toEndOf="@id/grade"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/subject"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_create_24"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/grade_student"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/subject_student"/>
        <TextView
            android:id="@+id/subject_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="죠즈94646"
            android:textColor="#2F2F2F"
            android:textSize="13sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/grade_student"
            app:layout_constraintStart_toEndOf="@id/subject"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/place"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_location_on_24"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/subject_student"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toStartOf="@id/place_student"/>

        <TextView
            android:id="@+id/place_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="죠즈94646"
            android:textColor="#2F2F2F"
            android:textSize="13sp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/subject_student"
            app:layout_constraintStart_toEndOf="@id/place"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>